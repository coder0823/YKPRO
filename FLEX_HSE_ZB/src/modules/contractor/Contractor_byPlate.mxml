			protected function init():void
			{
				tab1_topDS = new ArrayCollection();
				tab1_downDS = new ArrayCollection();
				
				refreshData();
				isFirstLoad = false;
			}
			
			private function refreshData():void
			{
				switch (_dataType)
				{
					case "remoteWebservice": 
						loadWSDL();
						break;
					case "loccalXMLFile": 
						loadData();
						break;
					case "localStaticData": 
						loadDemo();
						break;
				}
			}
			
			private function loadDemo():void
			{
				Alert.show("您现在浏览的为（静态）测试数据");
				//........
			
			}
			
			private function loadWSDL():void
			{
				loader_wsdl.load(new URLRequest(this._wsdlPath));
				loader_wsdl.addEventListener(Event.COMPLETE, loader_wsdl_result_handler);
			}
			
			private function loader_wsdl_result_handler(event:Event):void
			{
				ws_init();
			}
			
			private function ws_init():void
			{
				try
				{
					ws.wsdl = XML(loader_wsdl.data).url;
					ws.loadWSDL();
					//					ws.GetContractor(this.dateStart.selectedItem.value,this.dateEnd.selectedItem.value);
					ws.GetContractor(dateStr, 'contractor');
				}
				catch (e:Event)
				{
					Alert.show("请检查WEBSERVICE配置文件，在./assets/webserviceConf.xml中");
				}
			}
			
			protected function ws_resultHandler(event:ResultEvent):void
			{
				hseDataXML = XML(event.result);
				executeBind();
			}
			
			protected function ws_faultHandler(event:FaultEvent):void
			{
				trace(event);
			}
			
			private function loadData():void
			{
				Alert.show("您现在浏览的为（本地XML）测试数据");
				loader.load(new URLRequest(this._dataPath));
				loader.addEventListener(Event.COMPLETE, loadDataHandler);
			}
			
			private function loadDataHandler(event:Event):void
			{
				hseDataXML = XML(loader.data);
				executeBind();
			}
			
			private function executeBind():void
			{
				tab1_topDS = getTab1_topDS();
				tab1_downDS = getTab1_downDS();
				executeBindTab1Title();
			
			}
			
			private function executeBindTab1Title():void
			{
				tab1_topTitle = "中国石化" + dateStr + "年承包商构成情况";
			}
			
			private function getTab1_topDS():ArrayCollection
			{
				var tmpArrayCollection:ArrayCollection = new ArrayCollection();
				try
				{
					var tmpList:XMLList = hseDataXML.contractorData.plateData.(@plateid == "00");
					if (tmpList.length() > 0)
					{
						for each (var xml:XML in tmpList)
						{
							var obj:Object = {label: xml.@plateLabel, plan: xml.@contractorNumbers, act: xml.@qualifiedNumbers, sur: xml.@unqualifiedNumbers, msgFirst: "中国石化" + dateStr + "年承包商：", msgLast: "", id: xml.@plateid};
							tmpArrayCollection.addItem(obj);
						}
					}
				}
				catch (e:Event)
				{
					trace(e);
				}
				return tmpArrayCollection;
			}
			
			private function getTab1_downDS():ArrayCollection
			{
				var tmpArrayCollection:ArrayCollection = new ArrayCollection();
				try
				{
					var tmpList:XMLList = hseDataXML.contractorData.plateData.(@plateid != "00");
					if (tmpList.length() > 0)
					{
						for each (var xml:XML in tmpList)
						{
							var obj:Object = {label: xml.@plateLabel, plan: xml.@contractorNumbers, act: xml.@qualifiedNumbers, sur: xml.@unqualifiedNumbers, msgFirst: xml.@plateLabel + "板块" + dateStr + "年承包商：", msgLast: "", id: xml.@plateid};
							tmpArrayCollection.addItem(obj);
						}
					}
				}
				catch (e:Event)
				{
					trace(e);
				}
				return tmpArrayCollection;
			}
			
			//****************************************************
			//            板块信息
			//****************************************************
			//弹出
			private var titleWindow1:views.PopupTitleWinDG;
			private function popupPlateMX():void
			{
				titleWindow1 = new views.PopupTitleWinDG();
				titleWindow1.TitleValue = "中国石化" + "承包商情况" + "(" + dateStr + ") 计量单位：家";
				titleWindow1.addEventListener(CloseEvent.CLOSE, function closeEV():void
					{
						PopUpManager.removePopUp(titleWindow1);
					});
				titleWindow1.IfShowFirstRecordBgColor = true;
				titleWindow1.DataSourceConf = new ArrayCollection([{headerText: "序号", dataField: "order", width: "30", textAlign: "center", sortable: false, draggable: false}, {headerText: "板块", dataField: "label", width: "90", textAlign: "left", sortable: false, draggable: true, enableUrlLink: true,footHeakerText:"合计"}, {headerText: "总数", dataField: "plan", width: "40", textAlign: "center", sortable: true, draggable: true, enableUrlLink: true,footLblFunEnable:true,footLblFunType:"sum"}, {headerText: "合格", dataField: "act", width: "40", textAlign: "center", sortable: true, draggable: true, enableUrlLink: true,footLblFunEnable:true,footLblFunType:"sum"}, {headerText: "不合格", dataField: "sur", width: "40", textAlign: "center", sortable: true, draggable: true, enableUrlLink: true,footLblFunEnable:true,footLblFunType:"sum"},]);
				
				try
				{
					var tmpArrayCollection:ArrayCollection = new ArrayCollection();
					//插入合计数量
					/*组件2自动合计，因此不需要数据计算，注释掉
					var tmpList0:XMLList = hseDataXML.contractorData.plateData.(@plateid == "00");
					if (tmpList0.length() > 0)
					{
						var obj0:Object = {label: tmpList0[0].@plateLabel, plan: tmpList0[0].@contractorNumbers, act: tmpList0[0].@qualifiedNumbers, sur: tmpList0[0].@unqualifiedNumbers, index: 1, id: tmpList0[0].@plateid, order: ""};
						tmpArrayCollection.addItem(obj0);
					}
					*/
					
					//插入各个板块数据
					var tmpList:XMLList = hseDataXML.contractorData.plateData.(@plateid != "00");
					if (tmpList.length() > 0)
					{
						var index:int = 2;
						var order:int = 1;
						for each (var xml:XML in tmpList)
						{
							var obj:Object = {label: xml.@plateLabel, plan: Number(xml.@contractorNumbers), act: Number(xml.@qualifiedNumbers), sur: Number(xml.@unqualifiedNumbers), index: index, id: xml.@plateid, order: order};
							tmpArrayCollection.addItem(obj);
							index++;
							order++;
						}
					}
					titleWindow1.DataSource = tmpArrayCollection;
					
				}
				catch (e:Event)
				{
					trace(e);
				}
				titleWindow1.addEventListener(events.PopupEvent.PopupDoubleClick, popCorpList);
				titleWindow1.addEventListener(events.PopupEvent.PopupItemClick, popGoodBadList);
				PopUpManager.addPopUp(titleWindow1, this, true);
