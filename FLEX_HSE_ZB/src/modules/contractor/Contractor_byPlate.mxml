			protected function popCorpList(event:events.PopupEvent):void
			{
				var obj:Object = event.hitDataItem;
				if (obj.id != "00")
				{
					popupCorpMX(obj.id, obj.label);
				}
			}
			
			protected function popGoodBadList(event:events.PopupEvent):void
			{
				var obj:Object = event.hitDataItem;
				var typeid:String = "00";
				var typename:String = "全部";
				switch (obj.item)
				{
					case "label": 
						if (obj.id != "00")
						{
							popupCorpMX(obj.id, obj.label);
						}
						break;
					case "act": 
						typeid = "qualified";
						typename = "合格";
						if (obj.id != "00")
						{
							popupPlateSurMX(typeid, typename, obj.id, obj.label,true);
						}
						break;
					case "sur": 
						typeid = "unqualified";
						typename = "不合格";
						if (obj.id != "00")
						{
							popupPlateSurMX(typeid, typename, obj.id, obj.label,false);
						}
						break;
					default: 
						typeid = "00";
						typename = "全部";
						if (obj.id != "00")
						{
							popupPlateSurMX(typeid, typename, obj.id, obj.label,true);
						}
						break;
				}
			}
			
